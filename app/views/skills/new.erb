<h2>New skill</h2>

<% if @skill.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @skill.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

