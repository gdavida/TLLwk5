  <div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @box.name %></h2>
      <div class="row">
        <a href="/boxes/<%= @box.id %>/edit">
          <h5>Edit Record</h5>
        </a>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <a href="/new.erb">
          <h5>Add New</h5>
        </a>
      </div>
    </div>
  </div>

<h2>New box</h2>

<% if @box.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @box.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

