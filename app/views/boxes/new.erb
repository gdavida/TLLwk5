    <form action="/boxes/<%= @box.id %>" method="post">
      <div class='form-group'>
        Name:
        <input type="text" name="name" class="form-control" value="<%= @box.name %>">
      </div>
      <div class="form-group">
        Location:
        <input type="text" name="location" class="form-control" value="<%= @box.location %>">
      </div>
      
      <!-- CHECKBOXES -->
      <div class="form-group">
      Toys:<br>
        <% @toys.each do |t| %>
          <input type="checkbox" name="toy" value="<%= t.id %>"> <%= t.name %><br>
        <% end %>
      </div>






      <div class="form-group">
        <input type="submit" value="New Box" class="btn btn-default">
      </div>
    </form>


  </div>


