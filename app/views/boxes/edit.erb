  <div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2><%= @box.name %></h2>
			<div class="row">
				<a href="edit.erb">
					<h5>Edit Record</h5>
				</a>
			</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<a href="/new.erb">
					<h5>Add New</h5>
				</a>
			</div>
		</div>
	</div>
	<div class="row" id="boxViewShow">

<% if @box.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @box.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

		<h1><%= @box.name %></h1>	
    <form action="/boxes/<%= @box.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class='form-group'>
        Name:
        <input type="text" name="name" class="form-control" value="<%= @box.name %>">
      </div>
      <div class='form-group'>
        Location:
        <input type="text" name="location" class="form-control" value="<%= @box.location %>">
      </div>
      <div class="form-group">
        <input type="submit" value="Update box" class="btn btn-default">
      </div>
    </form>
    <p><a href="/boxes">Back to All boxes</a></p>
  </div>
	</div>
