  <div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2><%= @box.name %></h2>
		</div>
		<div class="col-md-6">
		</div>
	</div>
	<div class="row" id="boxViewShow">

<% if @box.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @box.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

		<h1><%= @box.name %> Add Toys</h1>	

      <!-- CHECKBOXES -->
    <ul>
      <form action="/boxes/<%= @box.id %>/toys" method="post">
        <input type="hidden" name="_method" value="patch">
      <% @toys.each do |t| %>
        <li>
          <%= t.name %>:
          <input type="checkbox" name="toy_id[]" value="<%= t.id %>"
            <%= @box.toys.include?(t) ? "checked" : ""%> >  
        </li>
      <% end %>
        <input type="submit" value="Update Categories">
      </form>
    </ul>


    <p><a href="/boxes">Back to All boxes</a></p>
  </div>
	</div>
















