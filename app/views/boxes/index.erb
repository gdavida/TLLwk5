<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Boxes Inventory</h2>
		</div>
		<div class="col-md-6">
			<div class="row">
				<a href="/boxes/new">
					<h5>Add New Box</h5>
				</a>
			</div>
		</div>
	</div>
	<div class="row">
		<ol>
			<% @boxes.each do |t| %>
	    	<li><a href="/boxes/<%= t.id %>" ><%= t.name %></a></li>
	  	<% end %>
		</ol>
	</div>
</div>

